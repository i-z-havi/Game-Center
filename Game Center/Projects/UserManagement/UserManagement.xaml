<Window x:Class="Game_Center.Projects.UserManagement.UserManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_Center.Projects.UserManagement"
        mc:Ignorable="d"
        Title="UserManagement" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="MainContainer" Grid.Row="0">
            
            <Label x:Name="Label_Title" 
                   Content="User Management"
                   Background="AliceBlue"
                   FontWeight="Bold"
                   FontSize="25"
                   HorizontalContentAlignment="Center"/>
            <StackPanel Width="300">
                <Label Content="User Name" />
                <TextBox x:Name="Input_User" 
                         BorderThickness="1,1,1,3"
                         Height="25"
                         >
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="BorderBrush" Value="Blue"/>
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
            <StackPanel Width="300">
                <Label Content="Email" />
                <TextBox x:Name="Input_Email" 
                         BorderThickness="1,1,1,3"
                         Height="25"
                         >
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="BorderBrush" Value="Blue"/>
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
            <StackPanel Width="300" Name="PassPanel" Visibility="Collapsed">
                <Label Content="Password" />
                <TextBox x:Name="Input_Password" 
                         BorderThickness="1,1,1,3"
                         Height="25"
                         >
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="BorderBrush" Value="Blue"/>
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button 
                    x:Name="AddBtn" 
                    Content="Add"
                    Width="100"
                    Height="30"
                    Background="Azure" Click="AddClick">
                    <Button.Resources>
                    <Style TargetType="Border">
                            <Setter Property="Margin" Value="5,0,5,0"/>
                            <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                    </Button.Resources>
                </Button>
                <Button 
                    x:Name="RegisterBtn" 
                    Content="Register"
                    Width="100"
                    Height="30"
                    Background="Azure" Click="RegisterClick">
                    <Button.Resources>
                    <Style TargetType="Border">
                            <Setter Property="Margin" Value="5,0,5,0"/>
                            <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                    </Button.Resources>
                </Button>
                <Button 
                    x:Name="DeleteBtn" 
                    Content="Delete"
                    Width="100"
                    Height="30"
                    Background="Azure" Click="DeleteUser">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="Margin" Value="5,0,5,0"/>
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
            <DataGrid x:Name="DataGrid1" SelectedCellsChanged="RowSelected" Loaded="RemovePasswords"/>


        </StackPanel>
    </Grid>
</Window>
